generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Announcement {
  id              Int        @id @default(autoincrement())
  title           String
  content         String
  publicationDate DateTime   @default(now())
  lastUpdate      DateTime   @updatedAt
  categories      Category[] @relation("AnnouncementToCategory")
}

model Category {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  announcements Announcement[] @relation("AnnouncementToCategory")
}
