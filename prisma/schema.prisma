generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Announcement {
  id              Int        @id @default(autoincrement())
  title           String
  content         String
  publicationDate DateTime   @default(now())
  lastUpdate      DateTime   @updatedAt
  categories      Category[]
}

enum Category {
  CITY
  COMMUNITY_EVENTS
  CRIME_SAFETY
  CULTURE
  DISCOUNTS_BENEFITS
  EMERGENCIES
  FOR_SENIORS
  HEALTH
  KIDS_FAMILY
}
